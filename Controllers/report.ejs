<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td,th{
                border: 1px solid white;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>

    <body>
        <h3 style="text-align: center;">Halal Restaurant Management System</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contactNumber %></th>
                <th>Payment Method: <%= paymentMethod %></th>
            </tr>
        </table>

        <h3>Product Details</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productDetails.length > 0) { %>
                <% productDetails.forEach(p =>{ %>
                    <tr>
                        <td><%= p.name %></td>
                        <td><%= p.category %></td>
                        <td><%= p.quantity %></td>
                        <td><%= p.price %></td>
                        <td><%= p.total %></td>     
                    </tr>
                <%});%>
                <%}%>
        </table>
        <h3>Total: <%= totalAmount %></h3>
        <h3>Thank you for visiting. Please visit again. </h3>
    </body>
</html>